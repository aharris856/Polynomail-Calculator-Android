<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCC4EC"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:fontFamily="casual"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Welcome to\nPolynomial Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <Button
        android:id="@+id/helpB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        app:backgroundTint="#00BCD4"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cubicB"
        app:layout_constraintVertical_bias="0.743" />

    <Button
        android:id="@+id/linearB"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:fontFamily="casual"
        android:text="Linear Equation Solver"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/quadraticB"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:fontFamily="casual"
        android:text="Quadratic Equation Solver"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearB"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/cubicB"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:fontFamily="casual"
        android:text="Cubic Equation Solver"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#F44336"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quadraticB"
        app:layout_constraintVertical_bias="0.149" />

</androidx.constraintlayout.widget.ConstraintLayout>